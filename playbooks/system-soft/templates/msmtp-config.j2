defaults
tls on
tls_starttls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account gmail
host smtp.gmail.com
port 587
auth on
user {{ system_soft.msmtp.user }}
from {{ system_soft.msmtp.user }}
password {{ system_soft.msmtp.pass }}
logfile /var/log/msmtp.log

# Default account to use
account default : gmail